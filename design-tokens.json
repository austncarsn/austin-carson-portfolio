    "xs": { "value": "0 1px 2px 0 rgb(0 0 0 / 0.05)", "type": "shadow" },
    "sm": { "value": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)", "type": "shadow" },
